#include <stdio.h>
#include <stdlib.h>
#include <stdbool.h>
#include "../cheats.h"

fn bool eps_lt_1000(x: int)
{
    return x < 1000;
}

fn bool eps_lt_100(x: int)
{
    return x < 100;
}

fn bool eps_lt_10(x: int)
{
    return x < 10;
}

global(int X) = -123;

fn fn(int)->bool get_epsilon_fn(which: int)
{
    switch (which)
    {
    case 1000:
        return eps_lt_1000;
    case 100:
        return eps_lt_100;
    case 10:
        return eps_lt_10;
    default:
        printf("unknown input to `get_epsilon_fn`: %d\n", which);
        exit(1);
    }
}

fn int apply_fn_if_outside_epsilon(op: fn(int)->int, x: int, epsilon_fn_idx: int)
{
    let eps_fn : fn(int)->bool = get_epsilon_fn(epsilon_fn_idx);

    if (eps_fn(x))
        return op(x);
    else
        return x;
}

fn int increment(x: int)
{
    return x + 1;
}

fn int main()
{
    let x: int = apply_fn_if_outside_epsilon(increment, 3, 10);
    printf(">>> %d\n", x);
}